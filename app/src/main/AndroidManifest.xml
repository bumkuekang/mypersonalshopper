<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bkang.myps.mypersonalshopper">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsedItemsActivity"
            android:label="@string/title_activity_used_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewItemsActivity"
            android:label="@string/title_activity_new_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConnectToShoppingActivity"
            android:label="@string/title_activity_connect_to_shopping"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
